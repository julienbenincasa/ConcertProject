{% extends 'base.html.twig' %}

{% block title %}Members{% endblock %}

{% block body %}
    <h1>Members</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Photo</th>
                <th>BirthDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cp_member in cp_members %}
            <tr>
                <td>{{ cp_member.id }}</td>
                <td>{{ cp_member.firstName }}</td>
                <td>{{ cp_member.lastName }}</td>
                <td>{{ cp_member.photo }}</td>
                <td>{{ cp_member.birthDate ? cp_member.birthDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('member_show', {'id': cp_member.id}) }}">show</a>
                    <a href="{{ path('member_edit', {'id': cp_member.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('member_new') }}">Create new</a>
{% endblock %}
