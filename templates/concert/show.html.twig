{% extends 'base.html.twig' %}

{% block title %}{{concert.getBand().getName()}}{% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <h1 class='d-flex justify-content-center'>Le concert</h1>

    <div class="container d-flex flex-row">
        <p>Groupe : {{concert.getBand().getName()}}</p>
        <p>Booker : {{concert.getBooker().getLastName()}}</p>
        <p>Hall : {{concert.getHall().getName()}}</p>
        <p>Date : {{ concert.getDate()|date('Y-m-d') }}</p>
    </div>

{% endblock %}