{% extends 'base.html.twig' %}

{% block title %}{{band.getName()}}{% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <h1 class='d-flex justify-content-center'>Le groupe {{ band.getName() }}</h1>

    <div class="container d-flex flex-row">

        {% for member in members %}
        <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{asset('images/'~ member.getFirstName()|lower ~ member.getLastName()|lower ~ '.jpg')}}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{member.getFirstName()|e ~ ' ' ~ member.getLastName()|e}}</h5>
            </div>
        </div>
        {% endfor %}

    </div>
    
    <div class="container d-flex flex-row">
        <p>Incoming concerts for {{band.getName()}} band :</p>
        {% for concert in incomingConcerts %}
            <a href="https://webinfo.iutmontp.univ-montp2.fr/~benincasaj/concertProject/public/concert/{{concert.getId()}}">{{ concert.getBand().getName() ~ ' ' ~ concert.getDate()|date('Y-m-d') }}</a>
        {% endfor %}
    </div>
{% endblock %}