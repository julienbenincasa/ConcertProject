{% extends 'base.html.twig' %}

{% block title %}Bands{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h2>Bands :</h2>

    {% for band in cp_bands %}
        <li><a href="https://webinfo.iutmontp.univ-montp2.fr/~benincasaj/concertProject/public/band/{{ band.getId() }}">{{ band.getName() }}</a></li>
        {% if is_granted('ROLE_ADMIN')%}
            <a class='btn btn-danger' href="{{ path('band_delete', {'id': band.getId()}) }}">
            x</a>
            <a class='btn btn-warning' href="{{ path('band_modify', {'id': band.getId()}) }}">
            Edit</a>
        {% endif %}
    {% endfor %}

    <div>
        <a class='btn btn-primary' href="{{ path('band_create') }}">
        Create a band</a>
    </div>
</div>
{% endblock %}
